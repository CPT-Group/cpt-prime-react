{
  "name": "@cpt-group/cpt-prime-react",
  "version": "1.9.6",
  "description": "PrimeReact components wrapped with CPT naming conventions and types for easy customization",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./cpt/light-theme.css": "./dist/cpt/light-theme.css",
    "./cpt/dark-theme.css": "./dist/cpt/dark-theme.css",
    "./cpt/*": {
      "default": "./dist/cpt/*.css"
    }
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:cjs && npm run build:esm && npm run build:types && npm run build:copy-css",
    "build:clean": "rimraf dist",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs",
    "build:esm": "tsc -p tsconfig.build.json --module esnext --outDir dist/esm",
    "build:types": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist/types",
    "build:copy-css": "node -e \"const fs=require('fs');const path=require('path');fs.mkdirSync('dist/cpt',{recursive:true});fs.readdirSync('src/cpt').filter(f=>f.endsWith('.css')).forEach(f=>fs.copyFileSync(path.join('src/cpt',f),path.join('dist/cpt',f)))\"",
    "watch": "tsc -p tsconfig.build.json --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "version": "node -e \"console.log(require('./package.json').version)\""
  },
  "keywords": [
    "react",
    "primereact",
    "components",
    "typescript",
    "ui",
    "cpt"
  ],
  "author": "CPT Group",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CPT-Group/cpt-prime-react.git"
  },
  "peerDependencies": {
    "chart.js": "^4.5.1",
    "lodash-es": "^4.17.0",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primereact": "^10.9.7",
    "quill": "^2.0.0",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "primereact": {
      "optional": false
    },
    "primeicons": {
      "optional": false
    },
    "primeflex": {
      "optional": false
    },
    "chart.js": {
      "optional": true
    },
    "quill": {
      "optional": true
    },
    "lodash-es": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "chart.js": "^4.5.1",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primereact": "^10.9.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
